<MOJAVEExportPopup>:
    title: "Export Data to MOJAVE Database?"
    size_hint: 0.35,0.35
    auto_dismiss: False

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.8
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Observer"
            Label:
                text: "Password"
            Label:
                text: "MOJAVE Source Name"
            Button:
                on_release: root.dismiss()
                text: "No"
        BoxLayout:
            orientation: "vertical"
            TextInput:
                text: "FEP"
                id: observer
            TextInput:
                password: True
                id: password
            TextInput:
                id: source_name_mojave
            Button:
                on_release:
                    app.export_data_to_mojave(root.ids.observer.text,root.ids.password.text,root.ids.source_name_mojave.text)
                    root.dismiss()
                text: "Submit"

<MOJAVEImportPopup>
    title: "Import Data from MOJAVE Database?"
    size_hint: 0.35,0.35
    auto_dismiss: False

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.8
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "MOJAVE Source Name"
            Label:
                text: "Observer"
            Label:
                text: "Band (e.g., Ku, K, Q)"
            Label:
                text: "Password"
            Button:
                on_release: root.dismiss()
                text: "No"
        BoxLayout:
            orientation: "vertical"
            TextInput:
                text: ""
                id: source
            TextInput:
                text: ""
                id: observer
            TextInput:
                text: ""
                id: band
            TextInput:
                password: True
                id: password
            Button:
                on_release:
                    app.import_data_from_mojave(root.ids.source.text,root.ids.observer.text,root.ids.band.text,root.ids.password.text)
                    root.dismiss()
                text: "Submit"




